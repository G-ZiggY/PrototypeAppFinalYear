<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/appName"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:src="@drawable/welcome3"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIV"
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/profile_holder"
        app:civ_border_color="#800033"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/profileTV"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="View Profile"
        android:textColor="#800033"
        android:textSize="17dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_settings"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="@dimen/_5dp"
        android:layout_toRightOf="@+id/profileIV"
        android:src="@drawable/user_settings"
        app:civ_border_color="#800033"
        app:civ_border_width="3dp" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_below="@+id/user_settings"
        android:layout_toRightOf="@+id/profileIV"
        android:fontFamily="@font/berkshire_swash"
        android:textColor="#800033"
        android:gravity="center_horizontal"
        android:textSize="10dp"
        android:text="Edit Profile"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/app_settings"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@+id/profileIV"
        android:layout_marginTop="160dp"
        android:layout_marginRight="@dimen/_5dp"
        android:src="@drawable/app_settings"
        app:civ_border_color="#800033"
        app:civ_border_width="3dp" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_below="@+id/app_settings"
        android:layout_toRightOf="@+id/profileIV"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center_horizontal"
        android:text="App Settings"
        android:textColor="#800033"
        android:textSize="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@+id/profileIV"
        android:layout_marginTop="240dp"
        android:layout_marginRight="@dimen/_5dp"
        android:src="@drawable/chat_image"
        app:civ_border_color="#800033"
        app:civ_border_width="3dp" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_below="@+id/chat_button"
        android:layout_toRightOf="@+id/profileIV"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center_horizontal"
        android:text="Chat"
        android:textColor="#800033"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/berkshire_swash"
        android:textColor="#800033"
        android:textSize="25dp" />

    <Button
        android:id="@+id/editProfile"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Edit profile"
        android:textStyle="bold|italic"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:textStyle="bold|italic"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>